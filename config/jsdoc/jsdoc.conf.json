{
  "opts": {
    "template": "node_modules/better-docs",
    "destination": "docs"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "better-docs": {
      "name": "My React components"
    }
  },
  "recurseDepth": 10,
  "source": {
    "include": ["./pages", "./components"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  }
}
